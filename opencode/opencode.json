{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "plugin": [
    "opencode-anthropic-auth"
  ],
  "instructions": [
    "~/.config/opencode/AGENTS_LOCAL.md"
  ],
  "permission": {
    "skill": {
      "*": "deny"
    },
    "edit": "allow",
    "webfetch": "ask",
    "bash": {
      "*": "ask",
      "git status": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git diff *": "allow",
      "git blame *": "allow",
      "git shortlog *": "allow",
      "rg *": "allow",
      "ls *": "allow",
      "grep *": "allow",
      "find *": "allow",
      "fd *": "allow",
      "sed *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "pwd": "allow",
      "cd *": "allow",
      "mkdir *": "allow",
      "bundle exec srb tc": "allow",
      "yarn test *": "allow",
      "npm test *": "allow",
      "awk *": "allow"
    }
  }
}
