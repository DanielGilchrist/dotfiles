{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "plugin": [
    "opencode-anthropic-auth@latest"
  ],
  "instructions": [
    "~/.config/opencode/AGENTS_LOCAL.md"
  ],
  "mode": {
    "build": {
      "prompt": "You are Claude Code, Anthropic's official CLI for Claude."
    },
    "plan": {
      "prompt": "You are Claude Code, Anthropic's official CLI for Claude."
    }
  },
  "permission": {
    "edit": "allow",
    "webfetch": "ask",
    "external_directory": {
      "~/Documents/repos/**": "allow",
      "~/.asdf/installs/**": "allow"
    },
    "bash": {
      "*": "ask",
      "git status": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git diff*": "allow",
      "git blame*": "allow",
      "git shortlog*": "allow",
      "git worktree*": "allow",
      "git fetch*": "allow",
      "git branch*": "allow",
      "rg*": "allow",
      "ls*": "allow",
      "grep*": "allow",
      "find*": "allow",
      "fd*": "allow",
      "sed*": "allow",
      "cat*": "allow",
      "head*": "allow",
      "tail*": "allow",
      "pwd": "allow",
      "cd*": "allow",
      "mkdir*": "allow",
      "uniq*": "allow",
      "echo*": "allow",
      "bundle exec srb tc*": "allow",
      "yarn test*": "allow",
      "npm test*": "allow",
      "awk*": "allow",
      "wc*": "allow",
      "sort*": "allow",
      "xargs*": "allow",
      "bin/dev*": "allow",
      "cargo*": "allow",
      "crystal*": "allow",
      "bundle*": "allow",
      "gh issue view*": "allow",
      "gh issue list*": "allow",
      "gh repo view*": "allow",
      "gh pr view*": "allow",
      "gh pr create*": "allow",
      "gh search*": "allow"
    }
  }
}
